#!/bin/ksh

source ${.sh.file%/*}/lib/testenv.ksh

start_environment

typeset -a tests
tests=(zadmedit rollback simple simple-attr bhyve lx)

typeset testopt="$1"

for t in ${tests[*]}; do
	[ -n "$testopt" -a "$testopt" != "$t" ] && continue
	note "Running test $t"
	( source ./t/$t )
done

stop_environment

